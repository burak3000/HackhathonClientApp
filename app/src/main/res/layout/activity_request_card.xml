<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dip"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hackhathonclientapp.RequestCardActivity">

<!--    <TextView
        android:id="@+id/nfcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="16dp"
        android:padding="10dp"
        android:text="" android:textAlignment="center"
        android:visibility="invisible"/>-->

    <Button
        android:id="@+id/readNFCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:text="Read NFC Card"
        android:onClick="ReadNFC"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/connectivityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <TextView
        android:id="@+id/tvIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:padding="10dp"
        android:textSize="16dp"
        android:text="Server IP Address" />
    <EditText
        android:id="@+id/etIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_margin="10dp"
        android:text="192.168.113.74"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:textSize="16dp"
        android:padding="10dp"
        android:text="Port" />
    <EditText
        android:id="@+id/etPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_margin="10dp"
        android:text="7000"
        android:background="@android:color/darker_gray"/>
    <Button
        android:id="@+id/btnAddCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SendRequestToServer"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:text="Request Card" />

</LinearLayout>
</RelativeLayout>